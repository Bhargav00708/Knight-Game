    <script>
        let lastKnightID = `33`;
        calculatePosition([3, 3]);
        function calculatePosition(posArray) {
            let allDiv = document.getElementsByTagName(`div`);
            for (let i = 1; i < allDiv.length; i++) {
                let getDiv = document.getElementsByTagName(`div`)[i];
                if (getDiv.className == `white`) {
                    getDiv.style.backgroundColor = `#ffcfb6`;
                }
                else if (getDiv.className == `black`) {
                    getDiv.style.backgroundColor = `#e59110`;
                }
            }
            let newPositionArray = [];
            let formula1 = [2, 1, -1, -2, -2, -1, 1, 2];
            let formula2 = [1, 2, 2, 1, -1, -2, -2, -1];
            let count = 0;
            for (let i = 0; i < 8; i++) {
                let x = parseInt(posArray[0]) + formula1[i];
                let y = parseInt(posArray[1]) + formula2[i];
                if (x >= 0 && y >= 0 && x <= 7 && y <= 7)
                    newPositionArray.push([x, y])
            }
            for (let i = 0; i < newPositionArray.length; i++) {
                let buildId = ``;
                for (let j = 0; j < newPositionArray[i].length; j++) {
                    buildId += newPositionArray[i][j];
                }
                document.getElementById(buildId).style.backgroundColor = `black`;
            }
        }
        document.getElementById(`mainBoard`).addEventListener(`click`, (e) => {
            let currentId = e.target.id; 
            document.getElementById(lastKnightID).innerHTML = ``;
            e.target.innerHTML = `&#9822;`;
            lastKnightID = currentId;
            calculatePosition(currentId.split(``));     
        }) 
    </script>
